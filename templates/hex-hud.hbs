<aside id="{{id}}" class="{{cssClass}}">
	<div>
		{{#if displayEncounter}}
		<p class="title item">
			{{#if hex.data.showEncounter}}
			<i class="fa-solid fa-eye"></i>
			<span class="key">{{hex.name}}</span>
			{{else}}
			<i class="fa-solid fa-eye-slash"></i>
			<span class="key unkown">{{hex.name}}</span>
			{{/if}}
			<span class="value gray">{{localize "VESSAYA.HEXTOOL.Hex"}} #{{hex}}</span>
		</p>
		<ul class="traits">
			<li>{{localize hex.discoveryTrait.label}}</li>
			{{#if hex.data.resourceTrait}}
			<lu>{{localize "VESSAYA.HEXTOOL.Resource"}}</li>
			{{/if}}
		</ul>
		{{else}}
		<p class="title item">
			<span class="value gray">{{localize "VESSAYA.HEXTOOL.Hex"}} #{{hex}}</span>
		</p>
		{{/if}}
	</div>


	<div class="group flex">
		<div>
			{{#if hex.zone.label}}
			<p class="item">
				<span class="gray key">{{localize "VESSAYA.HEXTOOL.Zone"}}</span>
				<span class="value">{{localize zone.label}}</span>
			</p>
			{{/if}}
			{{#if hex.terrain.label}}
			<p class="item">
				<span class="gray key">{{localize "VESSAYA.HEXTOOL.Terrain"}}</span>
				<span class="value">{{localize hex.terrain.label}}</span>
			</p>
			{{/if}}
			{{#if hex.travel.label}}
			<p class="item">
				<span class="gray key">{{localize "VESSAYA.HEXTOOL.Travel"}}</span>
				<span class="value">{{localize hex.travel.label}}</span>
			</p>
			{{/if}}
		</div>
		{{#if hex.terrain.img}}
		<img class="terrain" src="{{hex.terrain.img}}" alt="{{hex}}" />
		{{/if}}
	</div>

	<div class="group">
		{{~#if explored}}
		<p class="item">
			<span class="key">{{localize "VESSAYA.HEXTOOL.Explored"}}</span>
			<span class="value">{{localize hex.explorationState.label}}</span>
		</p>
		{{/if~}}
		{{~#if hex.data.cleared}}
		<p class="item">
			<span class="key">{{localize "VESSAYA.HEXTOOL.Cleared"}}</span>
			<i class="fa-solid fa-check"></i>
		</p>
		{{/if~}}
		{{~#if hex.data.claimed}}
		<p class="item">
			<span class="key">{{localize "VESSAYA.HEXTOOL.Claimed"}}</span>
			<i class="fa-solid fa-flag"></i>
		</p>
		{{/if~}}
	</div>

	{{#if dispalayResources}}
	{{#if hex.data.showResources}}
	<div class="group resources">
	{{else}}
	<div class="group resources unknown">
	{{/if}}
		{{~#if commodity}}
		<p class="item">
			<img src="{{commodity.img}}" alt="{{feature.name}}" />
			<span class="key">{{localize commodity.level}}</span>
			<span class="value gray">{{localize "VESSAYA.HEXTOOL.Commodity"}}</span>
		</p>
		{{/if~}}
		{{~#if camp}}
		<p class="item">
			<img src="{{camp.img}}" alt="{{feature.name}}" />
			<span class="key">{{localize camp.level}}</span>
			<span class="value gray">{{localize "VESSAYA.HEXTOOL.Camp"}}</span>
		</p>
		{{/if~}}
	{{/if}}

	</section>

	{{#if features.length}}
	<div class="group feature">
		{{#each features as |feature|}}
		{{#if feature.discovered}}
		<p class="item">
		{{else}}
		<p class="item unknown">
		{{/if}}
			<img src="{{feature.img}}" alt="{{feature.nam}}">
			<span class="key">{{feature.name}}</span>
			<i class="fa-solid {{ifThen feature.discovered 'fa-eye' 'fa-eye-slash'}}"</i>
		{{/each}}
	</div>
	{{/if}}
</aside>
